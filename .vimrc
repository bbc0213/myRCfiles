set ruler
set number
set nowrap
set hlsearch
set ignorecase
set enc=utf8
set ls=2
set expandtab
set shiftwidth=4
set tabstop=4
set softtabstop=4
set autoindent
set backspace=indent,eol,start
set listchars=tab:>-
set list
syntax on
filetype on
filetype plugin indent on
au BufNewFile,BufRead *.vg set filetype=verilog
